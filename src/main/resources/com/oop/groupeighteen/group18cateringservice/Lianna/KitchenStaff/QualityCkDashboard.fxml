<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="700.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.oop.groupeighteen.group18cateringservice.Lianna.KitchenStaffFoodSafetyController">
   <children>
      <Label layoutX="300.0" layoutY="20.0" text="Food Safety and Hygiene Practices">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
      
      <Label fx:id="totalTasksLabel" layoutX="50.0" layoutY="60.0" text="Total Tasks: 0" />
      <Label fx:id="completedTasksLabel" layoutX="150.0" layoutY="60.0" text="Completed: 0" />
      <Label fx:id="pendingTasksLabel" layoutX="250.0" layoutY="60.0" text="Pending: 0" />
      
      <Label layoutX="50.0" layoutY="90.0" text="Assigned Tasks:" />
      <TableView fx:id="safetyTasksTable" layoutX="50.0" layoutY="110.0" prefHeight="200.0" prefWidth="400.0">
        <columns>
          <TableColumn fx:id="taskNameCol" prefWidth="150.0" text="Task Name" />
          <TableColumn fx:id="safetyStatusCol" prefWidth="120.0" text="Status" />
          <TableColumn fx:id="hygieneNotesCol" prefWidth="130.0" text="Hygiene Notes" />
        </columns>
      </TableView>
      
      <Label layoutX="50.0" layoutY="330.0" text="Hygiene Checklist:" />
      <CheckBox fx:id="handsWashedCheckBox" layoutX="50.0" layoutY="350.0" text="Hands washed and gloves used" />
      <CheckBox fx:id="glovesUsedCheckBox" layoutX="50.0" layoutY="370.0" text="Gloves used" />
      <CheckBox fx:id="workAreaCleanCheckBox" layoutX="50.0" layoutY="390.0" text="Work area maintained clean" />
      <CheckBox fx:id="wasteDisposedCheckBox" layoutX="50.0" layoutY="410.0" text="Waste properly disposed" />
      
      <Button layoutX="50.0" layoutY="450.0" onAction="#washHandsButton" text="Wash Hands and Use Gloves" />
      <Button layoutX="200.0" layoutY="450.0" onAction="#maintainCleanAreaButton" text="Maintain Clean Area" />
      <Button layoutX="350.0" layoutY="450.0" onAction="#disposeWasteButton" text="Dispose Waste" />
      <Button layoutX="500.0" layoutY="450.0" onAction="#reportSafetyHazardButton" text="Report Safety Hazard" />
      
      <Button layoutX="50.0" layoutY="490.0" onAction="#updateTaskProgressButton" text="Update Task Progress" />
      <Button layoutX="200.0" layoutY="490.0" onAction="#viewSafetyReportsButton" text="View Safety Reports" />
      <Button layoutX="350.0" layoutY="490.0" onAction="#backToDashboardButton" text="Back to Dashboard" />
      
      <Label layoutX="500.0" layoutY="90.0" text="Task Details and Hygiene Status:" />
      <TextArea fx:id="safetyReportTextArea" layoutX="500.0" layoutY="110.0" prefHeight="400.0" prefWidth="350.0" editable="false" />
   </children>
</AnchorPane>
