<AnchorPane prefHeight="700.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.oop.groupeighteen.group18cateringservice.Lianna.SpecialMealController">
   <children>
      <Label layoutX="350.0" layoutY="20.0" text="Special Meal Requests">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
      
      <Label layoutX="50.0" layoutY="70.0" text="Special Meal Request Management">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      
      <Label layoutX="50.0" layoutY="110.0" text="Passenger Name" />
      <TextField fx:id="passengerNameField" layoutX="150.0" layoutY="100.0" prefWidth="150.0" />
      
      <Label layoutX="50.0" layoutY="150.0" text="Flight Number" />
      <TextField fx:id="flightNumberField" layoutX="150.0" layoutY="140.0" prefWidth="150.0" />
      
      <Label layoutX="50.0" layoutY="190.0" text="Meal Type" />
      <ComboBox fx:id="mealTypeComboBox" layoutX="150.0" layoutY="180.0" prefWidth="150.0" />
      
      <Label layoutX="50.0" layoutY="230.0" text="Dietary Requirement" />
      <ComboBox fx:id="dietaryRequirementComboBox" layoutX="150.0" layoutY="220.0" prefWidth="150.0" />
      
      <Label layoutX="50.0" layoutY="270.0" text="Due Date" />
      <DatePicker fx:id="dueDatePicker" layoutX="150.0" layoutY="260.0" prefWidth="150.0" />
      
      <Label layoutX="50.0" layoutY="310.0" text="Special Instructions" />
      <TextArea fx:id="specialInstructionsTextArea" layoutX="150.0" layoutY="300.0" prefWidth="200.0" prefHeight="40.0" />
      
      <Label layoutX="50.0" layoutY="360.0" text="Assigned Staff" />
      <TextField fx:id="assignedStaffField" layoutX="150.0" layoutY="350.0" prefWidth="150.0" />
      
      <Label layoutX="50.0" layoutY="400.0" text="Preparation Instructions" />
      <TextArea fx:id="preparationInstructionsTextArea" layoutX="150.0" layoutY="390.0" prefWidth="200.0" prefHeight="40.0" />
      
      <Label layoutX="50.0" layoutY="450.0" text="Status" />
      <ComboBox fx:id="statusComboBox" layoutX="150.0" layoutY="440.0" prefWidth="150.0" />
      
      <CheckBox fx:id="completedCheckBox" layoutX="150.0" layoutY="480.0" text="Completed" />
      <CheckBox fx:id="qualityVerifiedCheckBox" layoutX="250.0" layoutY="480.0" text="Quality Verified" />
      
      <Button layoutX="400.0" layoutY="100.0" mnemonicParsing="false" onAction="#addSpecialMealButton" text="Add Request" prefWidth="100.0" />
      <Button layoutX="400.0" layoutY="140.0" mnemonicParsing="false" onAction="#updateMealButton" text="Update Meal" prefWidth="100.0" />
      <Button layoutX="400.0" layoutY="180.0" mnemonicParsing="false" onAction="#assignTaskButton" text="Assign Task" prefWidth="100.0" />
      <Button layoutX="400.0" layoutY="220.0" mnemonicParsing="false" onAction="#verifyQualityButton" text="Verify Quality" prefWidth="100.0" />
      <Button layoutX="400.0" layoutY="260.0" mnemonicParsing="false" onAction="#approveRequestButton" text="Approve" prefWidth="100.0" />
      <Button layoutX="400.0" layoutY="300.0" mnemonicParsing="false" onAction="#rejectRequestButton" text="Reject" prefWidth="100.0" />
      
      <Separator layoutX="50.0" layoutY="520.0" prefWidth="800.0" />
      
      <Label layoutX="50.0" layoutY="550.0" text="Special Meal Requests">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
      
      <TableView fx:id="requeststableview" layoutX="50.0" layoutY="580.0" prefHeight="200.0" prefWidth="800.0">
        <columns>
          <TableColumn fx:id="flightnospecialcol" prefWidth="100.0" text="Flight No" />
          <TableColumn fx:id="passengernamespecialcol" prefWidth="120.0" text="Passenger Name" />
          <TableColumn fx:id="mealtypespecialcol" prefWidth="100.0" text="Meal Type" />
          <TableColumn fx:id="dietaryRequirementCol" prefWidth="100.0" text="Dietary Req" />
          <TableColumn fx:id="statusspecialcol" prefWidth="80.0" text="Status" />
          <TableColumn fx:id="assignedStaffCol" prefWidth="100.0" text="Assigned Staff" />
          <TableColumn fx:id="dueDateCol" prefWidth="100.0" text="Due Date" />
          <TableColumn fx:id="completedCol" prefWidth="80.0" text="Completed" />
        </columns>
      </TableView>
      
      <Button layoutX="20.0" layoutY="20.0" mnemonicParsing="false" onAction="#backButton" text="Back" prefWidth="80.0" />
      <Button layoutX="750.0" layoutY="20.0" mnemonicParsing="false" onAction="#saveChangesButton" text="Save Changes" prefWidth="100.0" />
   </children>
</AnchorPane>
